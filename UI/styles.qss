QWidget {
    background-color: #F0F2F5;
    font-family: Arial;
}
QLabel {
    font-size: 16px;
    color: #333;
}
QTextEdit {
    background-color: #FFFFFF;
    border: 1px solid #CED4DA;
    padding: 10px;
    font-size: 14px;
    border-radius: 5px;
}
QPushButton {
    color: #FFFFFF;
    border: none;
    padding: 10px 20px;
    font-size: 14px;
    border-radius: 5px;
}
QPushButton#sendButton {
    background-color: #DC3545;
}
QPushButton#sendButton:disabled {
    background-color: #D3D3D3;  /* Light gray */
    color: #A9A9A9;  /* Darker gray for text */
}
QPushButton#sendButton:hover:!disabled {
    background-color: #C82333;
}
QPushButton#speakButton {
    background-color: #007BFF;
}
QPushButton#speakButton:disabled {
    background-color: #D3D3D3;  /* Light gray */
    color: #A9A9A9;  /* Darker gray for text */
}
QPushButton#speakButton:hover:!disabled {
    background-color: #0056B3;
}
QPushButton#refreshButton {
    background-color: #28A745;
}
QPushButton#refreshButton:disabled {
    background-color: #D3D3D3;  /* Light gray */
    color: #A9A9A9;  /* Darker gray for text */
}
QPushButton#refreshButton:hover:!disabled {
    background-color: #218838;
}
QFrame {
    background-color: #FFFFFF;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}
